<MainWindow>:
    canvas.before:
        Color:
            rgba: app.color_white
        Rectangle:
            pos: self.pos
            size: self.size

    color: app.color_black

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        padding: 0
        sizing: 0

        StackLayout:
            id: nav_buttons_layout
            orientation: 'lr-tb'
            padding: 0, 0
            spacing: 1, 1
            size_hint: 1, None
            height: self.minimum_height

            Button:
                id: main_nav_button
                disabled: True

			    background_color: app.color_transparent
			    color: app.color_btn_inactive
			    disabled_color: app.color_btn_disabled
			    background_disabled_normal: ''

			    text_padding_x: app.button_text_padding_x
			    text_padding_y: app.button_text_padding_y
			    width: self.texture_size[0] + self.text_padding_x * 2
			    height: self.texture_size[1] + self.text_padding_y * 2
			    size_hint: None, None
				font_size: app.large_font_size
			    text: fa_icon('bars')

                on_press: root.select_screen('main_menu_screen', verify_state=True)

        ScreenManagement:
            id: screen_manager
            size_hint: 1, 1
            pos_hint: {'top': 1}
