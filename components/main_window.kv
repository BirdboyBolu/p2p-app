<MainWindow>:
    color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        padding: 0
        sizing: 0
        StackLayout:
            id: nav_buttons_layout
            orientation: 'lr-tb'
            padding: 1, 1
            spacing: 2, 0
            size_hint: 1, None
            height: self.minimum_height
            Button:
                id: main_nav_button
                disabled: True
                size_hint: None, None
                width: 28
                height: 28
                background_normal: 'atlas://images/logo/logo-color-28x28'
                background_down: 'atlas://images/logo/logo-white-28x28'
                background_disabled_normal: 'atlas://images/logo/logo-black-28x28'
                on_press: root.on_main_menu_button_pressed()
        ScreenManagement:
            id: screen_manager
            size_hint: 1, 1
            pos_hint: {'top': 1}
