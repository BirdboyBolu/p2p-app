<SinglePrivateFileScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses: root.get_statuses()

            VerticalScrollView:

                VerticalWithPaddingLayout:
                    size_hint: None, None
                    pos_hint: {'top': 1}
                    height: self.minimum_height
                    width: root.width - app.scroll_bar_width

                    MarkupLabel:
                        id: private_file_details
                        size_hint_y: None
                        text_size: self.width, None
                        height: self.texture_size[1]
                        color: app.color_black
                        text: ''

                    HorizontalContainerLayout:

                        HEmptySpace:

                        FillRoundFlatButton:
                            id: download_file_button
                            text: "[size=18sp]{}[/size] [size=16sp][b]download[/b][/size]".format(md_icon("file-download"))
                            md_bg_color: app.theme_cls.accent_color
                            theme_text_color: "Custom"
                            text_color: app.color_white99
                            on_release: root.on_download_file_button_clicked()

                        HFixedEmptySpace:

                        FillRoundFlatButton:
                            id: delete_file_button
                            text: "[size=18sp]{}[/size] [size=16sp][b]delete[/b][/size]".format(md_icon("file-delete"))
                            md_bg_color: app.theme_cls.error_color
                            theme_text_color: "Custom"
                            text_color: app.color_white99
                            on_release: root.on_delete_file_button_clicked()

                        HEmptySpace:

        BottomEmptyScreenSpace:
