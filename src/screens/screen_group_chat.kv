<GroupChatScreen>:

    AppScreenLayout:

        HorizontalContainerLayout:

            StatusLabel:
                id: chat_status_label
                size_hint: 1, None
                height: self.texture_size[1]
                text: ''

            CustomFloatingActionButton:
                id: invite_user_button
                icon: 'chat-plus'
                size_hint: None, None
                padding: dp(0)
                text_color: app.color_white
                user_font_size: '14sp'
                on_release: root.on_invite_user_button_clicked()

        VerticalScrollView:
            id: chat_messages_view

            ChatContainerLayout:
                id: chat_messages
                size_hint_x: None
                width: root.width - app.scroll_bar_width

        HorizontalLayout:
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: {'bottom': 1}
            padding: dp(10), dp(0)

            DynamicHeightTextInput:
                id: chat_input
                size_hint_x: 1
                text: ''

            RaisedIconButton:
                id: chat_send_button
                icon: 'send'
                _radius: dp(2)
                button_width: root.ids.chat_input.height
                button_height: root.ids.chat_input.height
                on_release: root.on_chat_send_button_clicked()
