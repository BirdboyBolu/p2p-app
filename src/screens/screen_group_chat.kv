<GroupChatScreen>:

    VerticalScreenLayout:

        HorizontalLayout:
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: {'bottom': 1}
            padding: dp(5)

            Widget:
                size_hint: 1, None
                height: 1

            CustomFloatingActionButton:
                id: invite_user_button
                icon: 'chat-plus'
                size_hint: None, None
                padding: dp(0)
                text_color: app.color_white
                user_font_size: '14sp'
                on_release: root.on_invite_user_button_clicked()

        StatusLabel:
            id: chat_status_label
            size_hint: 1, None
            height: self.texture_size[1]
            text: ''

        VerticalScrollView:
            id: chat_messages_view

            VerticalLayout:
                id: chat_messages
                size_hint: 1, None
                height: self.minimum_height
                padding: 5
                spacing: 5

        HorizontalLayout:
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: {'bottom': 1}

            DynamicHeightTextInput:
                id: chat_input
                size_hint_x: 1
                text: ''

            CustomIconButton:
                id: chat_send_button
                icon: 'send'
                button_width: dp(22)
                button_height: root.ids.chat_input.height
                font_size: '12sp'
                on_release: root.on_chat_send_button_clicked()
