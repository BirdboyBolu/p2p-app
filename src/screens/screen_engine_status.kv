<EngineStatusScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses:
                    { None: 'main process is not started',
                    'AT_STARTUP': 'starting the application',
                    'LOCAL': 'initializing local environment',
                    'MODULES': 'starting sub-modules',
                    'INSTALL': 'installing application',
                    'READY': 'application is ready',
                    'STOPPING': 'application is shutting down',
                    'SERVICES': 'starting network services',
                    'INTERFACES': 'starting application interfaces',
                    'EXIT': 'application is closed', }

            PageContainerWithPaddingLayout:

                HorizontalMinimumHeightLayout:
                    pos_hint: {'top': 1, 'left': 0}

                    MarkupLabel:
                        size_hint: 1, None
                        height: self.texture_size[1]
                        text: 'BitDust engine is a peer-to-peer application that powers independent online storage, secure private messaging and other p2p services available to everyone.\nThe process will run in the background and maintain peer-to-peer connections to other devices on the network.'

                HorizontalMinimumHeightLayout:
                    size_hint: 1, None
                    height: dp(32)

                    MarkupLabel:
                        size_hint: 1, None
                        height: dp(32)
                        halign: 'right'
                        text: 'BitDust engine started:    '
                        padding_x: dp(10)

                    Switch:
                        id: button_engine_on
                        size_hint_x: None
                        width: sp(83)
                        active: root.main_win().engine_is_on
                        on_active: root.on_engine_on_off(self.active)

                HorizontalMinimumHeightLayout:

                    MarkupLabel:
                        id: deploy_output_label
                        size_hint: 1, None
                        height: self.texture_size[1]
                        halign: 'right'
                        color: app.color_gray
                        text: root.main_win().engine_log

                VEmptySpace:
