<WelcomeScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        VLayout:
            size_hint: 1, 1

            VEmptySpace:
                size_hint_y: 0.5

            HLayout:
                size_hint: 1, .01

                HEmptySpace:
                    size_hint_x: 0.5

                NormalLabel:
                    text: '[size=26sp]Welcome to BitDust[/size]'

                HEmptySpace:
                    size_hint_x: 0.5

            VEmptySpace:
                size_hint_y: 0.5

    RootActionButton:
        id: action_button
        data: {'upload-lock': 'Encrypt and upload files', 'chat-plus-outline': 'Create new group', 'account-key-outline': 'Start private chat', }
        buttons_colors: {}
        callback: root.on_action_button_clicked
