<NewIdentityScreen>:
	title: 'new identity'

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Widget:
            size_hint: 0.5, 1

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.4, 1
            spacing: 10

            Widget:
                size_hint: 1, 0.3

            Label:
                text_size: self.size
                valign: "bottom"
                halign: "center"
                text: "username:"
                height: dp(20)
                size_hint: 1, None

            TextInput:
                id: username_input
                hint_text: 'alice'
                text: ''
                multiline: False
                pos_hint: {'center_x': .5}
                size_hint: None, None
                width: dp(160)
                height: self.minimum_height

            RoundedFlexButton:
                id: create_identity_button
                text: "create"
                pos_hint: {'center_x': .5}
                on_release: root.on_create_identity_button_clicked()

            RoundedFlexButton:
                id: recover_identity_button
                text: "recover"
                pos_hint: {'center_x': .5}
                on_release: root.on_recover_identity_button_clicked()

            Widget:
                size_hint: 1, 0.4

        Widget:
            size_hint: 0.5, 1
