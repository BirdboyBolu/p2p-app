<ConnectingScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses:
                    { None: 'main process is not started',
                    'AT_STARTUP': 'starting the application',
                    'NETWORK?': 'checking connection to the Internet',
                    'INCOMMING?': 'waiting initial reply from other nodes',
                    'CONNECTED': 'starting peer-to-peer network services',
                    'DISCONNECTED': 'disconnected',
                    'MY_IDENTITY': 'verifying my identity in the network',
                    'PROPAGATE': 'propagating my identity to other nodes', }

            VEmptySpace:
                size_hint_y: 0.5

            MarkupLabel:
                id: progress_label
                size_hint: 1, .01
                halign: 'center'
                text: '0 %'

            HLayout:
                size_hint: 1, .01

                HEmptySpace:
                    size_hint_x: 0.5

                HorizontalStackLayout:
                    id: services_list
                    size_hint_x: None
                    size_hint_y: None
                    width: dp(140)
                    height: self.minimum_height
                    spacing: dp(2)
                    padding: dp(25)

                HEmptySpace:
                    size_hint_x: 0.5

            VEmptySpace:
                size_hint_y: 0.5
