<FriendsScreen>:
	title: '{} contacts'.format(fa_icon('address-book', with_spaces=False))

    VerticalScrollView:

		VerticalLayout:
	    	id: friends_list
	    	pos_hint: {'top': 1}
			size_hint: 1, 1
			padding: dp(5)
			spacing: dp(5)
	
			FriendsListView:
	            id: friends_list_view
	            size_hint: 1, 1


<FriendRecord>:

    canvas.before:
        Color:
            rgba: (.95, .95, 95, 1) if self.selected else (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

	padding: 0
	spacing: 1
	text_padding_x: app.friend_record_padding_x
	text_padding_y: app.friend_record_padding_y
    height: app.friend_record_height
    size_hint_y: None
    size_hint_x: 1

    global_id: 'global_id'
	username: 'username'
	idhost: 'idhost'
	alias: 'alias'
    contact_state: 'contact_state'

    Label:
        id: contact_state_field
        font_size: '10sp'
        color: (.7, .7, .7, 1) if root.contact_state != 'CONNECTED' else (.6, 1, .6, 1)
        size_hint: None, 1
        width: self.texture_size[0] + root.text_padding_x
        text: fa_icon('circle')

    Label:
        id: label_field
        text: '[color=#000000][b]{}[/b][/color][color=#a0a0a0]@{}[/color]'.format(root.username, root.idhost)
        halign: 'left'
        font_size: '16sp'
        size_hint: None, 1
        width: self.texture_size[0] + root.text_padding_x * 2

	Widget:
		height: 1
		size_hint: 1, None


<FriendsListView>:
    viewclass: 'FriendRecord'
    SelectableRecycleBoxLayout:
        default_size: None, app.friend_record_height
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False


<FriendActionButton>:
	text_padding_x: dp(5)
	text_padding_y: dp(5)
    markup: True
    background_color: app.color_transparent
    color: app.color_btn_text_light
    disabled_color: app.color_btn_disabled
    background_disabled_normal: ''
    width: self.texture_size[0] + self.text_padding_x * 2
    height: app.friend_record_height
    size_hint: None, None
