<FriendActionButton>:
    button_width: app.friend_record_height - dp(1)
    button_height: app.friend_record_height - dp(1)
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color


<FriendRecord>:

    canvas.before:
        Color:
            rgba: app.color_row_seleted if self.selected else app.color_white
        Rectangle:
            pos: self.pos
            size: self.size

    size_hint: 1, None
    height: app.friend_record_height
    padding: 0
    spacing: 1

    global_id: 'global_id'
	username: 'username'
	idhost: 'idhost'
	alias: 'alias'
    contact_state: 'contact_state'

    CustomIcon:
        id: contact_state_field
        size_hint: None, 1
        width: dp(20)
        font_size: '14sp'
        color: app.color_circle_offline if root.contact_state != 'CONNECTED' else app.color_circle_online
        icon: 'lan-disconnect' if root.contact_state != 'CONNECTED' else 'circle'

    HFlexMarkupLabel:
        id: label_field
        label_height: root.height
        text: '[color=#000000][b]{}[/b][/color][color=#a0a0a0]@{}[/color]'.format(root.username, root.idhost)

	HFixedEmptySpace:
		width: dp(5)


<FriendsListView>:
    viewclass: 'FriendRecord'

    SelectableRecycleBoxLayout:
        default_size: None, app.friend_record_height
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False


<FriendsScreen>:

    AppScreenLayout:

        HorizontalContainerLayout:

            StatusLabel:
                id: status_label
                size_hint: 1, None
                height: self.texture_size[1]
                text: ''

            CustomFloatingActionButton:
                id: search_users_button
                icon: 'account-plus'
                size_hint: None, None
                padding: dp(0)
                text_color: app.color_white
                user_font_size: '20sp'
                on_release: root.on_search_people_button_clicked()

        VerticalScrollView:

            PageContainerWithLeftPaddingLayout:
	    	    id: friends_list
                size_hint_x: None
                width: root.width - app.scroll_bar_width

    			FriendsListView:
    	            id: friends_list_view
    	            size_hint: 1, 1
