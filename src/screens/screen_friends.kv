<FriendActionButton>:


<FriendRecord>:

    canvas.before:
        Color:
            rgba: app.color_row_seleted if self.selected else app.color_white
        Rectangle:
            pos: self.pos
            size: self.size

    size_hint: 1, None
    height: app.friend_record_height
    padding: 0
    spacing: 1

    global_id: 'global_id'
	username: 'username'
	idhost: 'idhost'
	alias: 'alias'
    contact_state: 'contact_state'

    CustomIcon:
        id: contact_state_field
        size_hint: None, 1
        width: dp(16)
        color: app.color_circle_offline if root.contact_state != 'CONNECTED' else app.color_circle_online
        icon: 'circle'
        font_size: '12sp'

    HFlexMarkupLabel:
        id: label_field
        height: root.height
        text: '[color=#000000][b]{}[/b][/color][color=#a0a0a0]@{}[/color]'.format(root.username, root.idhost)
        halign: 'left'
        valign: 'middle'

	HFixedEmptySpace:
		width: dp(5)


<FriendsListView>:
    viewclass: 'FriendRecord'

    SelectableRecycleBoxLayout:
        default_size: None, app.friend_record_height
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False


<FriendsScreen>:

    VerticalScrollView:

		VerticalLayout:
	    	id: friends_list
	    	pos_hint: {'top': 1}
			size_hint: 1, 1
			padding: dp(5)
			spacing: dp(5)
	
			FriendsListView:
	            id: friends_list_view
	            size_hint: 1, 1
