#:import md_icon components.webfont.md_icon


<MainMenuButton>:
    button_width: dp(80)
    button_height: dp(80)
    icon_size: '84sp'


<MainMenuScreen>:

    ScrollView:
        do_scroll_x: False

        StackLayout:
            orientation: 'lr-tb'
            padding: dp(20)
            spacing: dp(25)
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: {'top': 1}

            MainMenuButton:
            	icon: 'passport'
                label_text: 'my identity'
                on_press: root.main_win().select_screen('my_id_screen', verify_state=True)

            MainMenuButton:
            	icon: 'account-search'
                label_text: 'search people'
                on_press: root.main_win().select_screen('search_people_screen', verify_state=True)

            MainMenuButton:
            	icon: 'comment-multiple'
                label_text: 'conversations'
                on_press: root.main_win().select_screen('conversations_screen', verify_state=True)

            MainMenuButton:
            	icon: 'notebook'
                label_text: 'contacts'
                on_press: root.main_win().select_screen('friends_screen', verify_state=True)

            MainMenuButton:
            	icon: 'cogs'
                label_text: 'settings'
                on_press: root.main_win().select_screen('settings_screen', verify_state=True)
