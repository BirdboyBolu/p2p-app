<NoUsersFound>:
    width: self.texture_size[0]
    height: self.texture_size[1]
    size_hint: None, None
    pos_hint: {'left': 1}
    text: 'no users found'


<SearchResult>:

    size_hint: 1, None
    height: app.search_result_record_height
    padding: 0
    spacing: 1

    CustomRaisedIconButton:
        icon: 'account-plus'
        width: root.height
        height: root.height
        font_size: '14sp'
        on_press: root.on_search_result_add_clicked()

    HFixedEmptySpace:
        width: dp(5)

    HFlexMarkupLabel:
        id: search_result_label
        pos_hint: {'left': 1, 'center_y': 0.5}
        # size_hint: None, None
        # width: self.texture_size[0]
        # height: self.texture_size[1]
        font_size: '14sp'
        text: ''


<SearchPeopleScreen>:

    VerticalLayout:
        size_hint: 1, 1
        pos_hint: {'top': 1}
        padding: 15

        HorizontalLayout:
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: {'top': 1}

            SingleLineTextInput:
                id: search_input
                size_hint_x: None
                width: dp(150)
                hint_text: 'alice'
                text: ''
                on_focus: root.on_search_input_focus_changed()

            RoundedFlexButton:
                id: search_button
                size_hint_y: None
                height: root.ids.search_input.height
                disabled: False
                text: fa_icon('search')
                on_press: root.on_search_button_clicked()

        VerticalScrollView:

            VerticalLayout:
                id: search_results
                size_hint: 1, None
                height: self.minimum_height
                pos_hint: {'top': 1}
                padding: 5
                spacing: 5
