<NoUsersFound>:
    width: self.texture_size[0]
    height: self.texture_size[1]
    size_hint: None, None
    pos_hint: {'left': 1}
    font_size: '16sp'
    text: 'no users found'


<SearchResult>:

    size_hint: 1, None
    height: app.search_result_record_height
    padding: 0
    spacing: 1

    CustomRaisedIconButton:
        icon: 'account-plus'
        width: root.height - dp(6)
        height: root.height - dp(6)
        font_size: '16sp'
        on_press: root.on_search_result_add_clicked()

    HFixedEmptySpace:
        width: dp(5)

    HFlexMarkupLabel:
        id: search_result_label
        pos_hint: {'left': 1, 'center_y': 0.5}
        font_size: '16sp'
        text: ''


<SearchPeopleScreen>:

    VerticalLayout:
        size_hint: 1, 1
        pos_hint: {'top': 1}
        padding: 15

        HorizontalLayout:
            size_hint: 1, None
            height: self.minimum_height

            SingleLineTextInput:
                id: search_input
                size_hint_x: None
                width: dp(220)
                hint_text: 'Enter username to search'
                text: ''
                on_focus: root.on_search_input_focus_changed()

            VerticalLayout:
                size_hint: None, None
                width: self.minimum_width
                height: self.minimum_height

                CustomRaisedIconButton:
                    id: search_button
                    width: dp(28)
                    height: dp(28)
                    _radius: dp(3)
                    icon: 'magnify'
                    on_press: root.on_search_button_clicked()

                Widget:
                    size_hint: None, None
                    size: dp(16), dp(16)

        VerticalScrollView:

            VerticalLayout:
                id: search_results
                size_hint: 1, None
                height: self.minimum_height
                pos_hint: {'top': 1}
                padding: 5
                spacing: 5
