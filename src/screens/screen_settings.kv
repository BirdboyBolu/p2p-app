<SettingsTreeView>:
    size_hint: 1, None
    height: self.minimum_height
    root_options: {'text': 'settings'}
    indent_start: dp(15)
    indent_level: dp(15)
    hide_root: True


<SettingsScreen>:

    ScrollView:
        id: scroll_view
        do_scroll_x: False

        VerticalLayout:
            id: settings_content
            pos_hint: {'top': 1}
            size_hint: 1, None
            height: self.minimum_height
            padding: dp(15)
            spacing: dp(5)

            SettingsStatusMessage:
                id: status_message_label
                size_hint: 1, None
                height: self.texture_size[1]
                text: ''

            SettingsTreeView
                id: settings_tree
