<SelectFriendRecord>:
    size_hint: 1, None
    height: app.friend_record_height
    padding: 0
    spacing: 1
    selectable: True
    global_id: 'global_id'
    username: 'username'
    idhost: 'idhost'
    alias: 'alias'
    contact_state: 'contact_state'
    automat_index: 'automat_index'
    automat_id: 'automat_id'

    CustomIcon:
        id: contact_state_field
        size_hint: None, 1
        width: dp(20)
        font_size: '14sp'
        color: app.color_circle_offline if root.contact_state != 'CONNECTED' else app.color_circle_online
        icon: 'lan-disconnect' if root.contact_state != 'CONNECTED' else 'circle'

    HFlexMarkupLabel:
        id: label_field
        label_height: root.height
        # text: '[color=#000000][b]{}[/b][/color][color=#a0a0a0]@{}[/color]'.format(root.username, root.idhost)
        text: root.username

    HFixedEmptySpace:
        width: dp(5)


<SelectFriendListView>:
    viewclass: 'SelectFriendRecord'

    SelectableRecycleBoxLayout:
        id: selectable_layout
        default_size: None, app.friend_record_height
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False


<SelectFriendScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            HorizontalContainerLayout:

                NormalLabel:
                    size_hint_y: None
                    height: dp(32)
                    valign: 'middle'
                    font_size: app.font_size_large
                    text: root.screen_header

                Widget:
                    size_hint: 1, None
                    height: 1

            VerticalScrollView:

                PageContainerWithLeftPaddingLayout:
                    id: friends_list
                    size_hint_x: None
                    width: root.width - app.scroll_bar_width

                    SelectFriendListView:
                        id: friends_list_view
                        size_hint: 1, 1

    RootActionButton:
        id: action_button
        data: {'account-search-outline': 'Search people', }
        callback: root.on_action_button_clicked
