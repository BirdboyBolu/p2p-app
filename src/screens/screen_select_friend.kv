<SelectFriendRecord>:
    size_hint: 1, None
    height: app.friend_record_height
    padding: 0
    spacing: 1
    selectable: True
    global_id: 'global_id'
    username: 'username'
    idhost: 'idhost'
    alias: 'alias'
    contact_state: 'contact_state'
    automat_index: 'automat_index'
    automat_id: 'automat_id'

    CustomIcon:
        id: contact_state_field
        size_hint: None, 1
        width: dp(20)
        font_size: '14sp'
        color: app.color_circle_offline if root.contact_state != 'CONNECTED' else app.color_circle_online
        icon: 'lan-disconnect' if root.contact_state != 'CONNECTED' else 'circle'

    HFlexMarkupLabel:
        id: label_field
        label_height: root.height
        text: root.username

    HFixedEmptySpace:
        width: dp(5)


<SelectFriendListView>:
    viewclass: 'SelectFriendRecord'

    SelectableRecycleBoxLayout:
        id: selectable_layout
        default_size: None, app.friend_record_height
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False


<SelectFriendItem>:
    IconLeftWidget:
        id: item_image
        icon: 'account'


<SelectFriendScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatShortStatusPanel:
                id: state_panel
                size_hint_x: 1
                statuses:
                    { None: 'network service is not started',
                    'ON': 'list of contacts is synchronized',
                    'OFF': 'network service is switched off',
                    'NOT_INSTALLED': 'network service is not installed',
                    'INFLUENCE': 'turning off dependent network services',
                    'STARTING': 'network service is starting',
                    'DEPENDS_OFF': 'related network services were not started yet',
                    'STOPPING': 'network service is stopping',
                    'CLOSED': 'network service is closed', }

            HorizontalContainerLayout:

                NormalLabel:
                    size_hint_y: None
                    height: dp(32)
                    valign: 'middle'
                    font_size: app.font_size_large
                    text: root.screen_header

                Widget:
                    size_hint: 1, None
                    height: 1

            VerticalScrollView:

                # PageContainerWithLeftPaddingLayout:
                #     id: friends_list
                #     size_hint_x: None
                #     width: root.width - app.scroll_bar_width
                #     pos_hint: {'top': 1}

                CustomSelectionList:
                    id: friends_list_view
                    pos_hint: {'top': 1}

        BottomEmptyScreenSpace:


    DropDownMenu:
        id: drop_down_menu
        data: {'account-search-outline': 'Search people', }
        callback: root.on_drop_down_menu_item_clicked
