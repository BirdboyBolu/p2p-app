<PrivateChatScreen>:

    VerticalLayout:
        size_hint: 1, 1
        pos_hint: {'top': 1}

	    VerticalScrollView:
	    	id: chat_messages_view

			VerticalLayout:
				id: chat_messages
				size_hint: 1, None
				height: self.minimum_height
		        padding: 5
		        spacing: 5

        HorizontalLayout:
            size_hint: 1, None
            height: self.minimum_height
	        pos_hint: {'bottom': 1}

            DynamicHeightTextInput:
                id: chat_input
                size_hint_x: 1
				text: ''

            RoundedButton:
            	id: chat_send_button
				size_hint: None, None
				width: self.texture_size[0] + self.text_padding_x * 2
				height: self.texture_size[1] + self.text_padding_y * 2
            	font_size: app.font_size_icon
                text: fa_icon('paper-plane')
                on_release: root.on_chat_send_button_clicked()


<DynamicHeightTextInput>:
	max_lines: 7
    size_hint_y: None
	font_size: app.chat_input_font_size
	height: self.line_height * 1 + self.text_padding_y * 2


<ChatMessageLabel>:
	size_hint: None, None
	pos_hint: {'left': 0}
	width: self.texture_size[0]
	height: self.texture_size[1]
	halign: 'left'
