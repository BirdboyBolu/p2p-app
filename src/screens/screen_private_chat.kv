<PrivateChatScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            AutomatStatusPanel:
                id: state_panel
                size_hint: 1, None
                height: self.minimum_height

            HorizontalContainerLayout:

                StatusLabel:
                    id: chat_status_label
                    size_hint: 1, None
                    height: self.texture_size[1]
                    text: ''

            VerticalScrollView:
                id: chat_messages_view

                ChatContainerLayout:
                    id: chat_messages
                    size_hint_x: None
                    width: root.width - app.scroll_bar_width

            HorizontalLayout:
                size_hint: 1, None
                height: self.minimum_height
                pos_hint: {'bottom': 1}
                padding: dp(0), dp(0)

                DynamicHeightTextInput:
                    id: chat_input
                    size_hint_x: 1
                    text: ''

                RaisedIconButton:
                    id: chat_send_button
                    icon: 'send'
                    _radius: dp(0)
                    button_width: dp(32)
                    button_height: root.ids.chat_input.height
                    height: root.ids.chat_input.height
                    font_size: '12sp'
                    on_release: root.on_chat_send_button_clicked()
