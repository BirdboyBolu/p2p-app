<PrivateChatScreen>:

    VerticalLayout:
        size_hint: 1, 1
        pos_hint: {'top': 1}

        StatusLabel:
            id: chat_status_label
            size_hint: 1, None
            height: self.texture_size[1]
            text: ''

        VerticalScrollView:
            id: chat_messages_view

            VerticalLayout:
                id: chat_messages
                size_hint: 1, None
                height: self.minimum_height
                padding: 5
                spacing: 5

        HorizontalLayout:
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: {'bottom': 1}

            DynamicHeightTextInput:
                id: chat_input
                size_hint_x: 1
                text: ''

            CustomIconButton:
                id: chat_send_button
                icon: 'send'
                increment_diameter: dp(0)
                width: dp(22)
                height: root.ids.chat_input.height
                font_size: '12sp'
                on_release: root.on_chat_send_button_clicked()
