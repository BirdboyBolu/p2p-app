<ConversationActionButton>:
    button_width: app.conversation_record_height - dp(1)
    button_height: app.conversation_record_height - dp(1)
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color


<ConversationRecord>:

    canvas.before:
        Color:
            rgba: app.color_row_seleted if self.selected else app.color_white
        Rectangle:
            pos: self.pos
            size: self.size

    size_hint: 1, None
    height: app.conversation_record_height
    padding: 0
    spacing: 1

    type: 'type'
    conversation_id: 'conversation_id'
    key_id: 'key_id'
    state: 'state'
    label: 'label'

    CustomIcon:
        id: conversation_state_field
        size_hint: None, 1
        width: dp(20)
        font_size: '14sp'
        color: root.get_icon_color(root.state)
        icon: 'circle'

    HFlexMarkupLabel:
        id: label_field
        label_height: root.height
        text: root.label

    HFixedEmptySpace:
        width: dp(5)


<ConversationsListView>:
    viewclass: 'ConversationRecord'

    SelectableRecycleBoxLayout:
        id: selectable_layout
        default_size: None, app.conversation_record_height
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False


<ConversationsScreen>:

    ScreenContainerLayout:

        TopEmptyScreenSpace:

        AppScreenLayout:

            HorizontalContainerLayout:

                StatusLabel:
                    id: status_label
                    size_hint: 1, None
                    height: self.texture_size[1]
                    text: ''

                MDFloatingActionButton:
                    id: create_new_group_button
                    icon: 'plus'
                    elevation: 5
                    theme_text_color: "Custom"
                    text_color: app.color_white99
                    on_release: root.on_create_new_group_button_clicked()

            VerticalScrollView:
                id: scroll_view

                PageContainerWithLeftPaddingLayout:
                    id: conversations_list
                    size_hint_x: None
                    width: root.width - app.scroll_bar_width

                    ConversationsListView:
                        id: conversations_list_view
                        size_hint: 1, 1
