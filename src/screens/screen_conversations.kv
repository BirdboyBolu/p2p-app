<ConversationActionButton>:
    button_width: app.conversation_record_height - dp(1)
    button_height: app.conversation_record_height - dp(1)
    theme_text_color: 'Custom'
    text_color: app.theme_cls.primary_color
    md_bg_color: app.color_transparent


<ConversationRecord>:

    canvas.before:
        Color:
            rgba: app.color_row_seleted if self.selected else app.color_white
        Rectangle:
            pos: self.pos
            size: self.size

    size_hint: 1, None
    height: app.conversation_record_height
    padding: 0
    spacing: 1

    conversation_id: 'conversation_id'
    key_id: 'key_id'
    state: 'state'
    label: 'label'

    CustomIcon:
        id: conversation_state_field
        size_hint: None, 1
        width: dp(20)
        font_size: '14sp'
        color: root.get_icon_color(root.state)
        icon: 'circle'

    HFlexMarkupLabel:
        id: label_field
        label_height: root.height
        text: root.label

    HFixedEmptySpace:
        width: dp(5)


<ConversationsListView>:
    viewclass: 'ConversationRecord'

    SelectableRecycleBoxLayout:
        id: selectable_layout
        default_size: None, app.conversation_record_height
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False


<ConversationsScreen>:

    AppScreenLayout:

        HorizontalContainerLayout:

            StatusLabel:
                id: chat_status_label
                size_hint: 1, None
                height: self.texture_size[1]
                text: ''

            CustomFloatingActionButton:
                id: create_new_group_button
                size_hint: None, None
                text_color: app.color_white
                user_font_size: '20sp'
                icon: 'plus'
                icon_pack: 'IconICO'
                on_release: root.on_create_new_group_button_clicked()

        VerticalScrollView:

            PageContainerWithLeftPaddingLayout:
                id: conversations_list

                ConversationsListView:
                    id: conversations_list_view
                    size_hint: 1, 1
