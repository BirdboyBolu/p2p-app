<ConversationActionButton>:


<ConversationRecord>:

    canvas.before:
        Color:
            rgba: app.color_row_seleted if self.selected else app.color_white
        Rectangle:
            pos: self.pos
            size: self.size

	padding: 0
	spacing: 1
    height: app.conversation_record_height
    size_hint_y: None
    size_hint_x: 1

    conversation_id: 'conversation_id'
    global_id: 'global_id'
    state: 'state'
    label: 'label'

    CustomIcon:
        id: conversation_state_field
        size_hint: None, 1
        width: dp(16)
        color: app.color_circle_offline if root.state not in ['IN_SYNC!', 'CONNECTED'] else app.color_circle_online
        icon: 'circle'
        font_size: '12sp'

    HFlexMarkupLabel:
        id: label_field
        height: root.height
        text: root.label
        halign: 'left'
        valign: 'middle'

    HFixedEmptySpace:
        width: dp(5)


<ConversationsListView>:
    viewclass: 'ConversationRecord'

    SelectableRecycleBoxLayout:
        default_size: None, app.conversation_record_height
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False


<ConversationsScreen>:

    VerticalLayout:
        size_hint: 1, 1
        pos_hint: {'top': 1}

        Label:
            id: chat_status_label
            size_hint: 1, None
            height: self.texture_size[1]
            text: ''

        HorizontalLayout:
            size_hint: 1, None
            height: self.minimum_height
            pos_hint: {'bottom': 1}
            padding: dp(5)

            Widget:
                size_hint: 1, None
                height: 1

            CustomFloatingActionButton:
                id: create_new_group_button
                icon: 'chat-plus'
                size_hint: None, None
                size: (dp(20), dp(20))
                padding: dp(5)
                text_color: app.color_white
                user_font_size: '18sp'
                on_release: root.on_create_new_group_button_clicked()

        VerticalScrollView:

            VerticalLayout:
                id: conversations_list
                pos_hint: {'top': 1}
                size_hint: 1, 1
                padding: dp(5)
                spacing: dp(5)

                ConversationsListView:
                    id: conversations_list_view
                    size_hint: 1, 1
