<VerticalLayout>:
	orientation: 'vertical'
	padding: 0
	spacing: 0


<HLayout>:
	orientation: 'horizontal'
	padding: 0
	spacing: 0


<VLayout>:
	orientation: 'vertical'
	padding: 0
