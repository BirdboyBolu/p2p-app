<HorizontalLayout>:
	orientation: 'horizontal'
	padding: 0
	spacing: 0


<HorizontalWithPaddingLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: self.minimum_height
    padding: dp(10), dp(0)
    spacing: 0


<VerticalLayout>:
	orientation: 'vertical'
	padding: 0
	spacing: 0


<VerticalWithPaddingLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: dp(10), dp(0)
    spacing: 0


<VerticalWithLeftPaddingLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: dp(10), dp(0), dp(0), dp(0)
    spacing: 0


<HLayout>:
	orientation: 'horizontal'
	padding: 0
	spacing: 0


<VLayout>:
	orientation: 'vertical'
	padding: 0
	spacing: 0


<HorizontalStackLayout>:
    orientation: 'lr-tb'
    size_hint: 1, None
    height: self.minimum_height
    padding: 0, 0
    spacing: 0, 0


<HEmptySpace>:
    size_hint_x: 0.5
    size_hint_y: None
    height: 1


<VEmptySpace>:
    size_hint_y: 0.5
    size_hint_x: None
    width: 1


<HFixedEmptySpace>:
    size_hint: None, None
    height: 1
    width: dp(10)


<VFixedEmptySpace>:
    size_hint: None, None
    width: 1
    height: dp(10)


<VerticalScreenLayout>:
    pos_hint: {'top': 1}
    size_hint: 1, 1
    padding: 0


<VerticalScreenWithPaddingLayout>:
    pos_hint: {'top': 1}
    size_hint: 1, 1
    padding: dp(10)


<AppScreenLayout>:
    size_hint: 1, 1
    pos_hint: {'top': 1, 'left': 0}
    padding: 0
    spacing: 0


<PageContainerLayout>:
    size_hint: 1, 1
    pos_hint: {'top': 1, 'left': 0}
    padding: dp(0)


<PageContainerWithPaddingLayout>:
    size_hint: 1, 1
    pos_hint: {'top': 1, 'left': 0}
    padding: dp(10)


<PageContainerWithLeftPaddingLayout>:
    size_hint: 1, 1
    pos_hint: {'top': 1, 'left': 0}
    padding: dp(10), dp(10), dp(0), dp(10)


<HorizontalContainerLayout>:
    padding: dp(10), dp(5)


<VerticalScrollView>:
    do_scroll_x: False
    bar_color: app.theme_cls.primary_light
    bar_width: dp(10)
    always_overscroll: False

