<AutomatStatusPanel>:
    orientation: "vertical"
    pos_hint: {"top": 1}
    size_hint_y: None
    height: dp(32)
    padding: "8dp"
    elevation: 0
    md_bg_color: self.theme_cls.bg_normal

    HorizontalMinimumHeightLayout:

        SingleLineLabel:
            id: label_name
            font_size: app.font_size_small

        SingleLineLabel:
            id: label_state
            font_size: app.font_size_small

    MDSeparator:
        height: "1dp"

    SingleLineLabel:
        id: label_status
        color: app.color_gray
        font_size: app.font_size_small


