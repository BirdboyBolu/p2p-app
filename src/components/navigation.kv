<ScreenManagement>:
    transition: NoTransition()


<NavIcon>:
    font_size: sp(19)
    size_hint: None, None
    size: (app.nav_height, app.nav_height)
    color: self.specific_secondary_text_color


<NavLabel>:
    padding_x: dp(1)
    size_hint: None, None
    size: self.texture_size
    pos_hint: {"center_y": .5}
    markup: True
    disabled: False
    valign: 'middle'
    halign: 'left'
    font_size: app.font_size_normal
    theme_text_color: 'Custom'
    text_color: self.specific_secondary_text_color


<NavCloseIcon>:
    icon: 'close'
    size_hint: None, None
    size: (app.nav_height - dp(6), app.nav_height - dp(4))
    pos_hint: {"center_x": .5, "center_y": .5}
    padding: (0, 0)
    font_size: '20sp'
    color: self.specific_secondary_text_color


<NavBaseRectangularButton>:
    canvas:
        Clear
        Color:
            rgba: self.md_bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: (root._radius, )


<NavButtonBase>:
    md_bg_color: app.theme_cls.primary_color if self.selected else app.theme_cls.primary_dark
    theme_text_color: 'Custom'
    text_color: root.specific_text_color if self.selected else root.specific_secondary_text_color


<NavButtonActive>:
    size_hint: None, None
    size: (lbl_txt.texture_size[0] + lbl_icn_left.texture_size[0] + root.increment_width, app.nav_height)
    padding: (0, 0)
    lbl_txt: lbl_txt
    lbl_icn_left: lbl_icn_left
    theme_text_color: 'Primary' if not root.text_color else 'Custom'
    markup: True

    HorizontalLayout:
        padding: dp(1)
        spacing: dp(0)

        NavIcon:
            id: lbl_icn_left
            icon: root.icon
            on_press: root.on_action_area_pressed()

	    NavLabel:
	        id: lbl_txt
		    text: root.text if root.button_label else ''
		    text_size: (None, root.height)
            on_press: root.on_action_area_pressed()


<NavButtonClosable>:
    size_hint: None, None
    size: (lbl_txt.texture_size[0] + lbl_icn_left.texture_size[0] + lbl_icn_right.texture_size[0] + root.increment_width, app.nav_height)
    padding: (0, 0)
    lbl_txt: lbl_txt
    lbl_icn_left: lbl_icn_left
    lbl_icn_right: lbl_icn_right
    theme_text_color: 'Primary' if not root.text_color else 'Custom'
    markup: True

    HorizontalLayout:
        padding: dp(1)
        spacing: dp(0)

        NavIcon:
            id: lbl_icn_left
            icon: root.icon
            on_press: root.on_action_area_pressed()

	    NavLabel:
	        id: lbl_txt
		    text: root.text if root.button_label else ''
		    text_size: (None, root.height)
            on_press: root.on_action_area_pressed()

        NavCloseIcon:
            id: lbl_icn_right
        	on_press: root.on_close_area_pressed()
