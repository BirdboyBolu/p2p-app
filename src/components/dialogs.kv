<YesNoPopup>:
    cols: 1

    Label:
        pos_hint: {'center_x': .5}
        valign: 'middle'
        halign: 'center'
        text: root.text

    GridLayout:
        cols: 2
        size_hint_y: None
        height: '44sp'

        Button:
            text: 'Yes'
            on_release: root.dispatch('on_answer','yes')

        Button:
            text: 'No'
            on_release: root.dispatch('on_answer', 'no')
