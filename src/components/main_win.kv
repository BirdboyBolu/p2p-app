#:import NoTransition kivy.uix.screenmanager.NoTransition


<ContentNavigationDrawer>:



<MainWin>:
    id: main_win

    canvas.before:
        Color:
            rgba: app.color_white
        Rectangle:
            pos: self.pos
            size: self.size

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 5
        icon: "search-web"
        title: "BitDust"
        anchor_title: 'center'
        specific_text_color: app.color_white
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")], ]
        right_action_items: [["search-web", lambda x: print('right menu 2')], ["dots-vertical", lambda x: print('right menu 1')], ]

    MDNavigationLayout:

        ScreenManager:
            id: screen_manager
            transition: NoTransition()

        MDNavigationDrawer:
            id: nav_drawer
            type: "modal"
            width: dp(200)
            opening_time: 0
            closing_time: 0

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer
                main_win: main_win

                ScrollView:

                    MDList:
                        id: menu_items
                        padding: dp(10)

                        MDActionTopAppBarButton:
                            icon: 'arrow-left'
                            md_bg_color: app.color_white99
                            on_release: nav_drawer.set_state("close")

                        Widget:
                            size_hint: None, None
                            width: 1
                            height: dp(50)
                            # height: toolbar.height
                            

                        OneLineIconListItem:
                            text: "my identity"
                            on_release:
                                nav_drawer.set_state("close")
                                main_win.select_screen('my_id_screen', verify_state=True)

                            IconLeftWidget:
                                icon: "passport"
                                md_bg_color: app.color_white99
                                on_release:
                                    nav_drawer.set_state("close")
                                    main_win.select_screen('my_id_screen', verify_state=True)


                        OneLineIconListItem:
                            text: "contacts"
                            on_release:
                                nav_drawer.set_state("close")
                                main_win.select_screen('friends_screen', verify_state=True)

                            IconLeftWidget:
                                icon: "account-multiple"
                                md_bg_color: app.color_white99
                                on_release:
                                    nav_drawer.set_state("close")
                                    main_win.select_screen('friends_screen', verify_state=True)

                        OneLineIconListItem:
                            text: "chat"
                            on_release:
                                nav_drawer.set_state("close")
                                main_win.select_screen('conversations_screen', verify_state=True)

                            IconLeftWidget:
                                icon: "chat-outline"
                                md_bg_color: app.color_white99
                                on_release:
                                    nav_drawer.set_state("close")
                                    main_win.select_screen('conversations_screen', verify_state=True)

                        OneLineIconListItem:
                            text: "settings"
                            on_release:
                                nav_drawer.set_state("close")
                                main_win.select_screen('settings_screen', verify_state=True)

                            IconLeftWidget:
                                icon: "cogs"
                                md_bg_color: app.color_white99
                                on_release:
                                    nav_drawer.set_state("close")
                                    main_win.select_screen('settings_screen', verify_state=True)
