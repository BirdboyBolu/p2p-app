#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition


<ContentNavigationDrawer>:

    ScrollView:

        MDList:
            id: menu_items
            padding: dp(10)

            MDActionTopAppBarButton:
                icon: 'arrow-left'
                md_bg_color: app.color_transparent
                on_release: app.root.root_widget.nav().set_state("close")

            Widget:
                size_hint: None, None
                width: 1
                height: dp(50)

            OneLineIconListItem:
                id: menu_item_status
                text: "status"
                on_release:
                    app.root.root_widget.nav().set_state("close")
                    app.root.root_widget.select_screen('engine_status_screen', verify_state=True)
                IconLeftWidget:
                    icon: "cellphone-information"
                    md_bg_color: app.color_transparent
                    md_bg_color_disabled: app.color_transparent
                    on_release:
                        app.root.root_widget.nav().set_state("close")
                        app.root.root_widget.select_screen('engine_status_screen', verify_state=True)

            OneLineIconListItem:
                id: menu_item_my_identity
                text: "my identity"
                on_release:
                    app.root.root_widget.nav().set_state("close")
                    app.root.root_widget.select_screen('my_id_screen', verify_state=True)
                IconLeftWidget:
                    icon: "passport"
                    md_bg_color: app.color_transparent
                    md_bg_color_disabled: app.color_transparent
                    on_release:
                        app.root.root_widget.nav().set_state("close")
                        app.root.root_widget.select_screen('my_id_screen', verify_state=True)

            OneLineIconListItem:
                id: menu_item_chat
                text: "chat"
                on_release:
                    app.root.root_widget.nav().set_state("close")
                    app.root.root_widget.select_screen('conversations_screen', verify_state=True)
                IconLeftWidget:
                    icon: "chat-outline"
                    md_bg_color: app.color_transparent
                    md_bg_color_disabled: app.color_transparent
                    on_release:
                        app.root.root_widget.nav().set_state("close")
                        app.root.root_widget.select_screen('conversations_screen', verify_state=True)

            OneLineIconListItem:
                id: menu_item_settings
                text: "settings"
                on_release:
                    app.root.root_widget.nav().set_state("close")
                    app.root.root_widget.select_screen('settings_screen', verify_state=True)
                IconLeftWidget:
                    icon: "cogs"
                    md_bg_color: app.color_transparent
                    md_bg_color_disabled: app.color_transparent
                    on_release:
                        app.root.root_widget.nav().set_state("close")
                        app.root.root_widget.select_screen('settings_screen', verify_state=True)


<MainWin>:
    id: main_win

    canvas.before:
        Color:
            rgba: app.color_white
        Rectangle:
            pos: self.pos
            size: self.size

    Widget:
        id: dropdown_menu_placeholder
        size_hint: None, None
        size: 1,1
        pos_hint: {"center_x": .98, "center_y": .89}

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 0
        icon: "search-web"
        title: "BitDust"
        anchor_title: 'center'
        specific_text_color: app.color_white
        left_action_items: [["menu", root.on_left_menu_button_clicked, ], ]
        right_action_items: []

    MDNavigationLayout:

        ScreenManager:
            id: screen_manager
            transition: NoTransition()

        MDNavigationDrawer:
            id: nav_drawer
            type: "modal"
            width: dp(220)
            opening_time: 0
            closing_time: 0
            elevation: 0

            ContentNavigationDrawer:
                id: nav_drawer_content
