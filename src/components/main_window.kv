<MainWindow>:

    canvas.before:
        Color:
            rgba: app.color_white
        Rectangle:
            pos: self.pos
            size: self.size

    color: app.color_black

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        padding: 0
        sizing: 0

        StackLayout:
            id: nav_buttons_layout
            orientation: 'lr-tb'
            padding: 0, 0
            spacing: 1, 1
            size_hint: 1, None
            height: self.minimum_height

	        IconButton:
	            id: main_nav_button
	            disabled: True
	            icon: 'menu'
	            padding: dp(0)
	            font_size: sp(20)
	            pos_hint: {"center_x": .5, "center_y": .5}
	            size_hint: None, None
	            size: (app.nav_height, app.nav_height)
	            md_bg_color: app.color_white
                theme_text_color: 'Custom'
                text_color: app.color_gray
	        	on_press: root.select_screen('main_menu_screen', verify_state=True)

        ScreenManagement:
            id: screen_manager
            size_hint: 1, 1
            pos_hint: {'top': 1}
