<MainWindow>:

    canvas.before:
        Color:
            rgba: app.color_white
        Rectangle:
            pos: self.pos
            size: self.size

    color: app.color_black

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        padding: 0
        spacing: 0

        StackLayout:
            id: nav_buttons_layout
            orientation: 'lr-tb'
            padding: 0, 0
            spacing: 1, 1
            size_hint: 1, None
            height: self.minimum_height

	        TransparentIconButton:
	            id: main_nav_button
	            disabled: True
	            icon: 'menu'
	            font_size: sp(18)
	            button_width: app.nav_height
	            button_height: app.nav_height
	            color: app.color_gray
	        	on_press: root.select_screen('main_menu_screen', verify_state=True)

        ScreenManagement:
            id: screen_manager
            size_hint: 1, 1
            pos_hint: {'top': 1}
