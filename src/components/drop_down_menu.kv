<CustomFloatingRootButton>:
    theme_text_color: "Custom"
    md_bg_color: self.theme_cls.primary_color

    canvas.before:
        PushMatrix
        Rotate:
            angle: self._angle
            axis: (0, 0, 1)
            origin: self.center
    canvas.after:
        PopMatrix

    icon: 'dots-vertical'
    text_color: app.color_white99
    md_bg_color: self.theme_cls.primary_dark
    user_font_size: "17sp"
    padding: "0dp"


