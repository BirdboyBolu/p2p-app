<DropdownRightContent>:
    adaptive_width: True


<DropdownMenuItemIcon>:

    IconLeftWidget:
        id: icon_widget
        icon: root.icon


<DropdownMenu>:
    size_hint: None, None
    width: root.width_mult * STD_INC
    bar_width: 0

    MDGridLayout:
        id: box
        cols: 1
        adaptive_height: True


<BaseDropdownMenu>:

    MDCard:
        id: card
        elevation: 0
        size_hint: None, None
        size: md_menu.size
        pos: md_menu.pos
        md_bg_color: 0, 0, 0, 0
        opacity: md_menu.opacity

        canvas:
            Clear
            Color:
                rgba: root.background_color if root.background_color else root.theme_cls.bg_dark
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: root.radius

        MDMenu:
            id: md_menu
            drop_cls: root
            width_mult: root.width_mult
            size_hint: None, None
            size: 0, 0
            opacity: 0


<CustomFloatingRootButton>:
    theme_text_color: "Custom"
    md_bg_color: self.theme_cls.primary_color

    canvas.before:
        PushMatrix
        Rotate:
            angle: self._angle
            axis: (0, 0, 1)
            origin: self.center
    canvas.after:
        PopMatrix

    icon: 'dots-vertical'
    text_color: app.color_white99
    md_bg_color: self.theme_cls.primary_dark
    user_font_size: "17sp"
    padding: "0dp"
