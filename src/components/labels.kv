<BaseLabel>:


<MarkupLabel>:
    markup: True
    shorten: False
    strip_reflow: False


<HFlexMarkupLabel>:
    size_hint: None, None
    size: self.texture_size
    text_size: None, self.label_height
    markup: True
    color: (0, 0, 0, 1)
    halign: 'left'
    valign: 'middle'


<VFlexMarkupLabel>:
    size_hint: None, None
    size: self.texture_size
    text_size: self.label_width, None
    markup: True
    color: (0, 0, 0, 1)
    halign: 'left'
    valign: 'top'


<NormalLabel>:
    markup: True
	font_size: app.font_size_normal


<CustomIcon>:
    # markup: True
    # text: md_icon(self.icon)


<ChatMessageLabel>:
    pos_hint: {'left': 0}
    size_hint: None, None
    width: self.texture_size[0]
    height: self.texture_size[1]
    text_size: None, None
    halign: 'left'


<StatusLabel>:
