#:import make_icon components.webfont.make_icon


<BaseLabel>:


<MarkupLabel>:
    markup: True
    shorten: False
    strip_reflow: False


<HFlexMarkupLabel>:
    size_hint: None, None
    size: self.texture_size
    text_size: None, self.label_height
    markup: True
    color: (0, 0, 0, 1)
    halign: 'left'
    valign: 'middle'


<VFlexMarkupLabel>:
    size_hint: None, None
    size: self.texture_size
    text_size: self.label_width, None
    markup: True
    color: (0, 0, 0, 1)
    halign: 'left'
    valign: 'top'


<NormalLabel>:
    markup: True
	font_size: app.font_size_normal



<CustomIcon>:
    size_hint: None, None
    size: self.icon_width, self.icon_height
    text_size: self.size
    valign: 'middle'
    halign: 'center'
    pos_hint: {"center_x": .5, "center_y": .5}
    color: (0, 0, 0, 1)
    background_color: (0, 0, 0, 0)
    background_normal: ''
    background_down: ''
    background_disabled_normal: ''
    background_disabled_down: ''
    markup: True
    text: make_icon(self.icon, self.icon_pack)



<ChatMessageLabel>:
    pos_hint: {'left': 0}
    size_hint: None, None
    width: self.texture_size[0]
    height: self.texture_size[1]
    text_size: None, None
    halign: 'left'


<StatusLabel>:

