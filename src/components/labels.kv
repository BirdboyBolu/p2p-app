#:import make_icon components.webfont.make_icon


<BaseLabel>:
    disabled_color: app.color_disabled


<MarkupLabel>:
    markup: True
    shorten: False
    strip_reflow: False


<HFlexMarkupLabel>:
    size_hint: None, None
    size: self.texture_size
    text_size: None, self.label_height
    markup: True
    color: (0, 0, 0, 1)
    halign: 'left'
    valign: 'middle'


<VFlexMarkupLabel>:
    size_hint: None, None
    size: self.texture_size
    text_size: self.label_width, None
    markup: True
    color: (0, 0, 0, 1)
    halign: 'left'
    valign: 'top'


<NormalLabel>:
    font_size: app.font_size_normal


<SingleLineLabel>:
    size_hint_y: None
    height: self.texture_size[1]


<CustomIcon>:
    size_hint: None, None
    size: self.icon_width, self.icon_height
    text_size: self.size
    pos_hint: {"center_x": .5, "center_y": .5}
    valign: 'middle'
    halign: 'center'
    background_color: (0, 0, 0, 0)
    disabled_color: app.color_disabled
    markup: True
    font_style: self.icon_pack
    text: make_icon(self.icon, self.icon_pack)


<ChatMessageLabel>:
    size_hint: 1, None
    size: self.texture_size
    text_size: root.width, None
    pos_hint: {'left': 0}
    halign: 'left'
    font_size: sp(12)
    line_height: 0.75


<StatusLabel>:

