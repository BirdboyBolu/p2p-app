<BaseLabel>:


<MarkupLabel>:
    markup: True
    shorten: False
    strip_reflow: False


<VFlexMarkupLabel>:
    size_hint: None, None
    size: self.texture_size
    text_size: None, None


<HFlexMarkupLabel>:
    size_hint: None, None
    text_size: None, self.label_height
    size: self.texture_size
    # width: self.texture_size[0]
    # height: self.label_height


<NormalLabel>:
    markup: True
	font_size: app.font_size_normal


<CustomIcon>:
    markup: True
    text: md_icon(self.icon)
