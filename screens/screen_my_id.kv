<MyIDScreen>:
	title: '{}  my identity'.format(fa_icon('id-card-alt'))

    ScrollView:
        do_scroll_x: False

	    BoxLayout:
	        orientation: 'vertical'
	        pos_hint: {'top': 1}
	        size_hint: 1, None
	        height: self.minimum_height
	        padding: 15

	        Label:
	        	id: my_id_details

			    size_hint_y: None
			    text_size: self.width, None
			    height: self.texture_size[1]

				color: (0, 0, 0, 1)
				background_color: (0, 0, 0, 1)
				foreground_color: (0, 1, 0, 1)

	            markup: True
			    multiline: True
			    readonly: True
			    text:""

			RoundedFlexWidthButton:
				text: 'key backup'
