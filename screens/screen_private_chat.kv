<PrivateChatScreen>:

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        Label:
        	size_hint: 1, 1
            text: '[size=24]bla \\n bla bla[/size]'

        BoxLayout:
            orientation: 'horizontal'
            # height: app.chat_input_height
            height: self.minimum_height
            size_hint: 1, None

            DynamicHeightTextInput:
                id: chat_input
                size_hint_x: 1
				text: ''

            RoundedButton:
            	id: chat_send_button
				size_hint: None, None
				width: self.texture_size[0] + self.text_padding_x * 2
				height: self.texture_size[1] + self.text_padding_y * 2
            	font_size: app.font_size_icon
                text: fa_icon('paper-plane')


<DynamicHeightTextInput>:
	max_lines: 7
    size_hint_y: None
	font_size: app.chat_input_font_size
	height: self.line_height * 1 + self.text_padding_y * 2
