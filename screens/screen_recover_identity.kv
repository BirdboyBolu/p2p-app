<RecoverIdentityScreen>:
	title: 'recover identity'
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        Widget:
            size_hint: 0.01, 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1
            spacing: 10
            Widget:
                size_hint: 1, 0.01
            Label:
                valign: 'bottom'
                halign: 'right'
                text: "private key:"
                text_size: self.size
                height: 20
                size_hint: 1, None
                pos_hint: {'center_x': .5}
            BoxLayout:
                # width: 340
                # height: 320
                size_hint: 1, 1
                pos_hint: {'center_x': .5}
	            TextInput:
	                id: private_key_input
	                multiline: True
	                text: ''
	                halign: 'left'
	                text_size: self.size
	                height: self.minimum_height
	                size_hint: 1, 1
            RoundedButton:
                id: recover_identity_button
                text: 'recover'
                size_hint: None, None
                pos_hint: {'center_x': .5}
                on_release: root.on_start_recover_identity_button_clicked()
            Label:
            	id: recover_identity_result_message
                valign: 'bottom'
                halign: 'right'
                text: ""
                height: 20
                size_hint: None, None
                pos_hint: {'center_x': .5}
            Widget:
                size_hint: 1, 0.01
        Widget:
            size_hint: 0.01, 1
