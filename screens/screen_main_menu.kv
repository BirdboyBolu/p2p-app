<MainMenuButton@Button>:
	fa_icon_text: ''
	short_text: ''
	fa_icon_size: 60
	short_text_size: 14
	height: 120
	width: 120
    size_hint: None, None
    disabled_color: .8,.8,.8,1
    background_disabled_normal: ''
    background_color: 0,0,0,0
    color_normal: .1,.4,.7,1
    color_pressed: .2,.5,.8,1
    color: self.color_normal if self.state == 'normal' else self.color_pressed
    markup: True
    text_size: self.size
    halign: 'center'
	text: '[size={}]{}[/size]\n[size={}]{}[/size]'.format(self.fa_icon_size, self.fa_icon_text, self.short_text_size, self.short_text)
    corner_radius: 5


